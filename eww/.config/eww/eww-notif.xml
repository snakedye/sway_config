<eww>
  <definitions>
    <def name="notification-widget">
      <box style="padding: 0px;border-radius:10px; border: 2px solid #414141;">
        <notification-center/>
      </box>
    </def>
    <def name="notification-center">
      <box class="widget" style="padding: 10px 0px 10px 0px;" orientation="v" spacing="0" space-evenly="false">
        <box halign="fill" style="margin: 0 10px 0 10px;" orientation="h" spacing="10" space-evenly="true" class="header">
          <button onclick="~/.config/eww/scripts/toggle" halign="start" style="font-weight: bold; padding: 5px; font-size: 12px">Notification Center</button>
          <button onclick="echo clear > /tmp/notification; ~/.local/bin/eww update notifs=''" halign="end" style="background-color: #3a3a3a; padding: 0px 10px 0px 10px; font-size: 26px; border-radius: 10px;">ï¢ž</button>
        </box>
        <notifications/>
      </box>
    </def>
    <def name="notifications">
      <box visible="{{hide}}">
        <literal content="{{notifs}}"/>
      </box>
    </def>
  </definitions>
  <variables>
    <var name="notifs"></var>
    <var name="hide">false</var>
  </variables>
</eww>
