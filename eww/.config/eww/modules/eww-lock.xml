<eww>
  <definitions>
    <def name="lock">
        <power/>
    </def>
    <!-- Power widget -->
    <def name="power">
      <box space-evenly="false" orientation="v" halign="fill" class="power" spacing="0">
        <!-- <label style="border-bottom: 2px solid #3a3a3a; margin: 0px 60px 0px 60px" height="" text=""></label> -->
        <box orientation="h" halign="center" valign="center" width="50" height="70" style="font-size: 40px;margin: 5px" spacing="10">
          <button onclick="~/.local/bin/eww close hub  &amp;&amp; swaylock -f"></button>
          <button onclick="loginctl terminate-user $USER"></button>
          <button onclick="systemctl poweroff">⏻</button>
          <button onclick="~/.local/bin/eww close hub &amp;&amp; systemctl suspend">鈴</button>
        </box>
      </box>
    </def>
  </definitions>
  <variables>
  </variables>
</eww>
